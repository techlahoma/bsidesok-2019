
@import 'bootstrap/bootstrap'
@import 'animation'
@import 'settings'
@import 'mixins'
@import 'tito'

body
  background: $background
  font-family: $font-body
  font-weight: 100
  color: $blue-dark
  font-size: $font-size-body
  line-height: 40px
  text-align: center
  cursor: default
  @media only screen and (max-width: $break-small)
    font-size: 18px
    line-height: 22px
html, body
  height: 100%
  min-height: 100%
#content
  //background: url("../images/test-grid.png")
// Typography
h1, h2, h3, h4
  margin: 0 0 0
  @media only screen and (max-width: $break-small)
    margin-bottom: 10px
h2
  font-family: $font-headers

h3
  font-family: $font-subheaders
a, a:hover
  cursor: pointer
  color: $blue-light
  padding: 0 4px
  opacity:0.8
  transition: all 0.3s ease

a:hover
  opacity: 1
  color: $blue-light


strong
  padding: 0 4px
sup
  font-size: 0.6em
img
  max-width: 100%
// Elements
section
  clear: both
  padding: 50px 0
.container
  @media only screen and (max-width: $break-small)
    padding: 0px 0px
.section-title
  font-size: 50px
  line-height: 60px
  margin: 0 0 20px
  font-family: $font-headers
  color: $purple-light
  @media only screen and (max-width: $break-small)
    font-size: 25px
    line-height: 30px
    margin-bottom: 10px
.list-simple
  margin: 0
  padding: 0
  list-style: none
.list-inline
  @extend .list-simple
  li
    display: inline-block
